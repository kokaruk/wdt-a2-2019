@model WdtApiLogin.Controllers.StaffController.ViewModel

@{
    
    ViewData["Title"] = "Upcoming Events";
}
<div id="main">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">My Upcoming Events</h1>
        <div class="btn-toolbar mb-2 mb-md-0">
            <a class="btn btn-sm btn-outline-secondary" asp-action="Create">
                Create New
            </a>
        </div>
    </div>
    @if (Model.Slots.Any())
    {
       <div class="table-responsive table-hover">
           <table class="table table-striped table-sm">
               <thead>
                   <tr class="d-flex">
                       <th class="col-1">@Html.DisplayNameFor(modelItem => Model.Slots.First().RoomID)</th>
                       <th class="col-3">@Html.DisplayNameFor(modelItem => Model.Slots.First().StartTime)</th>
                       <th class="col-5">@Html.DisplayNameFor(modelItem => Model.Slots.First().Student)</th>
                       <th class="col-3">&nbsp;</th>
                   </tr>
               </thead>
               <tbody>
                   @foreach (var item in Model.Slots)
                   {
                       <tr class="d-flex">
                           <td class="col-1">@item.RoomID</td>
                           <td class="col-3">@item.StartTime</td>
                           <td class="col-5">@if (item.Student != null)
                                             {
                                                 @($"{item.Student.Name} ({item.Student.UserID})")
                                             } </td>
                           <td class="col-3"></td>
                       </tr>
                   }
               </tbody>
           </table>
        </div>
    }
    else
    {
        <h2>No Upcoming Events Found</h2>
    }

</div>
